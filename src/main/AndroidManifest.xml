<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.Mikado"
    android:versionCode="1"
    android:versionName="1"
    tools:ignore="GradleOverrides">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_pearl"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowLogin"
            android:label="@string/title_activity_show_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity android:name=".ImageCropper" />
        <activity
            android:name=".ShowAllAdvertisement"
            android:label="@string/title_activity_show_all_advertisement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowFullAdvertisement"
            android:label="@string/title_activity_show_full_advertisement"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".InsertAdvertisement"
            android:label="@string/title_activity_insert_advertisement" />
        <activity
            android:name=".AboutPearl"
            android:label="@string/title_activity_about_pearl"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategoryList"
            android:theme="@style/CategoryListTheme" />
        <activity android:name=".Rules" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/WelcomeTheme" />
        <activity
            android:name=".AboutUs"
            android:theme="@style/AboutUsTheme" />
    </application>

</manifest>