<?xml version="1.0"?>

<resources>

    <!-- Base application theme. -->


    -

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->


        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

    </style>


    -

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.Button.Override" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/GrayGlass</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:drawableLeft">@drawable/ic_clear_white_24dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Submit" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/GrayGlass</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:drawableLeft">@drawable/ic_check_white_24dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Call" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:drawableLeft">@drawable/ic_call_white_24dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Message" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:drawableLeft">@drawable/ic_message_white_24dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.CategoryList" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:drawableLeft">@drawable/ic_playlist_add_check_white_24dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Email" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:drawableLeft">@drawable/ic_email_white_24dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Refresh" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/GrayBlur</item>
        <item name="android:drawableBottom">@drawable/ic_refresh_white_24dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Button.Add" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/GrayBlur</item>
        <item name="android:drawableLeft">@drawable/ic_playlist_add_check_white_24dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/boss</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="CategoryListTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardView.Light" parent="CardView.Light">
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/Black</item>

    </style>

    <style name="AppTheme.Button.AboutUs" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/GrayGlass</item>
        <item name="android:background">@color/GrayGlass</item>
        <item name="android:drawableRight">@drawable/ic_arrow_forward_black_24dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AboutUsTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowFixedHeightMajor">600dp</item>
        <item name="windowFixedWidthMajor">300dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>